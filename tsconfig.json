{
  "compilerOptions": {
    // "skipLibCheck": true,
    "outDir": "./dist/",
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "downlevelIteration": true,
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "newLine": "LF",
    "lib": [
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}